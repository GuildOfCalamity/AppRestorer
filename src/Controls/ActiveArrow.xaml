<UserControl
    x:Class="AppRestorer.Controls.ActiveArrow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <Border
        Width="24"
        Height="24"
        Padding="1"
        local:PressBehavior.Enable="True"
        BorderBrush="#97A0A5"
        BorderThickness="1"
        CornerRadius="2">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="Gray" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="DodgerBlue" />
                        <Setter Property="Cursor" Value="Hand" />
                        <!--
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                        -->
                    </Trigger>

                    <!--
                    <Trigger Property="local:PressBehavior.IsPressed" Value="True">
                        <Setter Property="Background" Value="SpringGreen" />
                    </Trigger>
                    -->

                    <DataTrigger Binding="{Binding (local:PressBehavior.IsPressed), RelativeSource={RelativeSource Self}}" Value="True">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="Gold"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                        To="DodgerBlue"
                                        Duration="0:0:0.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>

                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid x:Name="Inner">
            <local:GlowDecorator
                x:Name="Glow"
                Margin="1"
                BlurRadius="12"
                CornerRadius="0"
                Opacity="0.25"
                PenThickness="3"
                Color="{StaticResource GlowLight}">
                <local:GlowDecorator.Style>
                    <Style TargetType="{x:Type local:GlowDecorator}">
                        <Style.Triggers>

                            <!--#region [Instant Opacity Change]-->
                            <!--
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                <Setter Property="Opacity" Value="1.0" />
                            </DataTrigger>
                            -->
                            <!--#endregion-->

                            <!--#region [Animated Opacity Change]-->
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="1.0"
                                                Duration="0:0:0.12" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.25"
                                                Duration="0:0:0.12" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                            <!--#endregion-->

                        </Style.Triggers>
                    </Style>
                </local:GlowDecorator.Style>
            </local:GlowDecorator>
            <Path
                x:Name="Arrow"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                Fill="White"
                Stroke="DodgerBlue"
                StrokeThickness="0.3" />
        </Grid>

        <!--  [Press/release behavior]
        <Border.Triggers>
            <EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
                <BeginStoryboard x:Name="PressedStoryboard">
                    <Storyboard>
                        <ColorAnimation
                            FillBehavior="Stop"
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#FF66BB66"
                            Duration="0:0:0.10" />
                        <DoubleAnimation
                            Storyboard.TargetName="Inner"
                            Storyboard.TargetProperty="Opacity"
                            To="0.3"
                            Duration="0:0:0.10" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="PreviewMouseLeftButtonUp">
                <StopStoryboard BeginStoryboardName="PressedStoryboard" />
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="Inner"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.10" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="MouseLeave">
                <StopStoryboard BeginStoryboardName="PressedStoryboard" />
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="Inner"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            Duration="0:0:0.10" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        -->

    </Border>

</UserControl>
