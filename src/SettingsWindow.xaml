<Window
    x:Class="AppRestorer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:AppRestorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsWindow"
    Width="900"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    Icon="/AppRestorer;component/AppIcon.ico"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="hostBorder"
        MinWidth="350"
        MinHeight="150"
        Margin="10"
        Padding="20"
        Background="{StaticResource ExtraDarkBrush}"
        BorderBrush="{StaticResource NormalBrush}"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ctrl:Spinner
                Grid.Row="0"
                Grid.RowSpan="99"
                Width="830"
                Height="630"
                Margin="-2,-2,-2,-2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                BounceCollisions="False"
                BounceLowOpacity="True"
                BounceSpeed="50"
                DotBrush="{StaticResource SnowBrushRadial}"
                DotCount="140"
                DotSize="10"
                LineBaseSpeed="150"
                LineLowOpacity="True"
                RenderMode="AnimatePositions"
                RenderShape="Snow"
                SnowBaseSpeed="50"
                SnowLowOpacity="True"
                SpiralArmCount="2"
                SpiralClockwise="False"
                SpiralDotSpacing="5"
                SpiralFadeOut="True"
                SpiralRotationAngle="0.11"
                SpiralTwistDensity="0.11"
                SquareClockwise="True"
                SquareStep="1"
                StripeBaseSpeed="40"
                StripeLowOpacity="True"
                Visibility="{Binding IsAnimated, Mode=OneWay, Converter={StaticResource boolToVisibility}}"
                WaveAmplitude="12"
                WaveDuration="1.1"
                WindAmplitude="1"
                WindFrequency="0.5" />

            <ctrl:AutoExpander
                BorderThickness="0"
                CollapseDelay="00:00:03.0"
                CollapseOnLeave="True"
                ExpandDirection="Down"
                IsExpanded="{Binding IsBusy, Mode=OneWay}"
                Style="{StaticResource GroupBoxExpander}">
                <ctrl:AutoExpander.Header>
                    <DockPanel VerticalAlignment="Stretch">
                        <!-- <Image Source="Images/info.png" Width="10" Height="10" DockPanel.Dock="Left" RenderOptions.BitmapScalingMode="Fant" /> -->
                        <TextBlock
                            FontSize="16"
                            Foreground="{StaticResource NormalBrush}"
                            Text="Commands" />
                    </DockPanel>
                </ctrl:AutoExpander.Header>
                <StackPanel
                    Grid.Row="0"
                    Margin="0,2,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <ctrl:CandyButton
                        IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                        MouseUp="CandyButton_MouseUp"
                        Style="{StaticResource cbSettings}"
                        Tag="cb1"
                        Text="Update"
                        ToolTip="Update" />
                    <ctrl:CandyButton
                        IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                        MouseUp="CandyButton_MouseUp"
                        Style="{StaticResource cbSettings}"
                        Tag="cb2"
                        Text="Refresh"
                        ToolTip="Refresh" />
                    <ctrl:CandyButton
                        IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                        MouseUp="CandyButton_MouseUp"
                        Style="{StaticResource cbSettings}"
                        Tag="cb3"
                        Text="Menu"
                        ToolTip="Menu" />
                    <ctrl:CandyButton
                        IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                        MouseUp="CandyButton_MouseUp"
                        Style="{StaticResource cbSettings}"
                        Tag="cb4"
                        Text="Login"
                        ToolTip="Login" />
                    <ctrl:CandyButton
                        ButtonColor="Gold"
                        IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                        MouseUp="CandyButton_MouseUp"
                        Style="{StaticResource cbSettings}"
                        Tag="cb99"
                        Text="Close"
                        ToolTip="Close" />
                </StackPanel>
            </ctrl:AutoExpander>

            <StackPanel
                Grid.Row="1"
                Margin="-15,5,-15,0"
                HorizontalAlignment="Center"
                Background="#00111111"
                MouseDown="Control_MouseDown"
                Orientation="Horizontal">
                <DockPanel Margin="10">
                    <!--#region [Filter TextBox]-->
                    <StackPanel
                        Margin="10,0,0,5"
                        HorizontalAlignment="Stretch"
                        DockPanel.Dock="Top"
                        Orientation="Vertical">
                        <StackPanel
                            Margin="10,0,0,5"
                            HorizontalAlignment="Stretch"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="16"
                                Foreground="{StaticResource NormalBrush}"
                                Text="Filter:" />
                            <TextBox
                                MinWidth="200"
                                MinHeight="24"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="{StaticResource NormalBorderBrush}"
                                FontSize="18"
                                Foreground="{StaticResource NormalBrush}"
                                Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock
                                MinWidth="300"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="16"
                                Foreground="{StaticResource SettingsBrush}"
                                Text="{Binding StatusText, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="3"
                                        Direction="310"
                                        Opacity="0.8"
                                        ShadowDepth="1"
                                        Color="#000000" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                        <ProgressBar
                            Width="199"
                            Height="4"
                            Margin="55,-12,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="DodgerBlue"
                            IsEnabled="True"
                            IsIndeterminate="True"
                            Style="{StaticResource SmoothIndeterminateProgressBar}"
                            Visibility="{Binding IsBusy, Mode=OneWay, Converter={StaticResource boolToVisibility}}" />

                        <!--<ctrl:ProgressBarEx
                            AnimationWidth="100"
                            BarColor="DodgerBlue"
                            BarHeight="16"
                            BarWidth="30"
                            Visibility="{Binding IsBusy, Mode=OneWay, Converter={StaticResource boolToVisibility}}"
                            Duration="00:00:01.1" />-->
                    </StackPanel>
                    <!--#endregion-->

                    <ListBox
                        x:Name="AppList"
                        MinWidth="800"
                        MinHeight="480"
                        MaxHeight="480"
                        Margin="0"
                        Background="Transparent"
                        BorderThickness="0"
                        DockPanel.Dock="Bottom"
                        ItemsSource="{Binding Apps, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:InstalledApp}">
                                <Border
                                    x:Name="Border"
                                    Margin="1"
                                    Padding="8"
                                    BorderBrush="{StaticResource NormalDarkBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="3"
                                            Direction="310"
                                            Opacity="0.5"
                                            ShadowDepth="3"
                                            Color="{StaticResource BackgroundDark}" />
                                    </Border.Effect>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="1,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{StaticResource NormalBrush}"
                                                Text="{Binding DisplayName}"
                                                ToolTipService.ToolTip="Application Name" />
                                            <TextBlock
                                                Margin="10,0"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{StaticResource SettingsBrush}"
                                                Text="{Binding DisplayVersion}"
                                                ToolTipService.ToolTip="Application Version" />
                                        </StackPanel>
                                        <TextBlock
                                            Margin="1"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="{StaticResource NormalMidBrush}"
                                            Text="{Binding TargetDirectory}"
                                            ToolTipService.ToolTip="Application Path" />
                                        <TextBlock
                                            Margin="1"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="{StaticResource NormalMidBrush}"
                                            Text="{Binding Publisher}"
                                            ToolTipService.ToolTip="Application Publisher" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </DockPanel>

            </StackPanel>

        </Grid>
    </Border>
</Window>
