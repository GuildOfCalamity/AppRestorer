<Window
    x:Class="AppRestorer.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:AppRestorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsWindow"
    Width="900"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    Icon="/AppRestorer;component/AppIcon.ico"
    Loaded="SettingsWindow_Loaded"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="hostBorder"
        MinWidth="350"
        MinHeight="150"
        Margin="10"
        Padding="20"
        Background="{StaticResource ExtraDarkBrush}"
        BorderBrush="{StaticResource NormalBrush}"
        BorderThickness="2"
        CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ctrl:CandyButton
                    IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                    MouseUp="CandyButton_MouseUp"
                    Style="{StaticResource cbSettings}"
                    Tag="cb1"
                    Text="Update"
                    ToolTip="Update" />
                <ctrl:CandyButton
                    IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                    MouseUp="CandyButton_MouseUp"
                    Style="{StaticResource cbSettings}"
                    Tag="cb2"
                    Text="Refresh"
                    ToolTip="Refresh" />
                <ctrl:CandyButton
                    IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                    MouseUp="CandyButton_MouseUp"
                    Style="{StaticResource cbSettings}"
                    Tag="cb3"
                    Text="Menu"
                    ToolTip="Menu" />
                <ctrl:CandyButton
                    IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                    MouseUp="CandyButton_MouseUp"
                    Style="{StaticResource cbSettings}"
                    Tag="cb4"
                    Text="Login"
                    ToolTip="Login" />
                <ctrl:CandyButton
                    IsEnabled="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, Converter={StaticResource boolToReverse}}"
                    MouseUp="CandyButton_MouseUp"
                    Style="{StaticResource cbSettings}"
                    Tag="cb99"
                    Text="Close"
                    ToolTip="Close" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="10,2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Vertical">
                <TextBlock
                    Background="Transparent"
                    FontSize="16"
                    Foreground="{StaticResource SettingsBrush}"
                    Text="{Binding StatusText, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="3"
                            Direction="310"
                            Opacity="0.8"
                            ShadowDepth="1"
                            Color="#000000" />
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="-15,5,-15,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <DockPanel Margin="10">
                    <!--  Filter TextBox  -->
                    <StackPanel
                        Margin="10,0,0,5"
                        HorizontalAlignment="Stretch"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Foreground="{StaticResource NormalBrush}"
                            Text="Filter:" />
                        <TextBox
                            MinWidth="200"
                            MinHeight="20"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            Foreground="{StaticResource NormalBrush}"
                            Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <ListBox
                        x:Name="AppList"
                        MinWidth="800"
                        MinHeight="490"
                        MaxHeight="490"
                        Margin="0"
                        Background="Transparent"
                        BorderThickness="0"
                        DockPanel.Dock="Bottom"
                        ItemsSource="{Binding Apps, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:InstalledApp}">
                                <Border
                                    x:Name="Border"
                                    Margin="1"
                                    Padding="8"
                                    BorderBrush="{StaticResource NormalDarkBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="3"
                                            Direction="310"
                                            Opacity="0.5"
                                            ShadowDepth="3"
                                            Color="{StaticResource BackgroundDark}" />
                                    </Border.Effect>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="1,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="{StaticResource NormalBrush}"
                                                Text="{Binding DisplayName}"
                                                ToolTipService.ToolTip="Application Name" />
                                            <TextBlock
                                                Margin="10,0"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{StaticResource SettingsBrush}"
                                                Text="{Binding DisplayVersion}"
                                                ToolTipService.ToolTip="Application Version" />
                                        </StackPanel>
                                        <TextBlock
                                            Margin="1"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="{StaticResource NormalMidBrush}"
                                            Text="{Binding TargetDirectory}"
                                            ToolTipService.ToolTip="Application Path" />
                                        <TextBlock
                                            Margin="1"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="{StaticResource NormalMidBrush}"
                                            Text="{Binding Publisher}"
                                            ToolTipService.ToolTip="Application Publisher" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>

            </StackPanel>

        </Grid>
    </Border>
</Window>
