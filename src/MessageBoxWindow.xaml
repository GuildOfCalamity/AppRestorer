<Window
    x:Class="AppRestorer.MessageBoxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Message"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        MinWidth="390"
        MinHeight="160"
        Margin="10"
        Padding="20"
        Background="{StaticResource ExtraDarkBrush}"
        BorderBrush="{StaticResource NormalBrush}"
        BorderThickness="2"
        CornerRadius="5"
        MouseDown="Border_MouseDown">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Message  -->
            <TextBlock
                x:Name="MessageText"
                Grid.Row="0"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"
                Foreground="{StaticResource NormalBrush}"
                Text="Message Goes Here"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="1"
                Margin="10,5,10,2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="Yes_Click"
                    Content="Yes"
                    FontSize="16"
                    IsDefault="True"
                    Template="{StaticResource ReformedButton}" />
                <Image
                    Width="44"
                    Height="44"
                    Margin="8,0,8,0"
                    Opacity="1"
                    RenderOptions.BitmapScalingMode="Fant"
                    Source="/WarningIcon3.png" />
                <Button
                    Width="100"
                    Margin="5,0"
                    Click="No_Click"
                    Content="No"
                    FontSize="16"
                    IsCancel="True"
                    Template="{StaticResource ReformedButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
