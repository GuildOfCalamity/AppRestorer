<Window
    x:Class="AppRestorer.TestingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:AppRestorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Testing"
    MinWidth="1100"
    MinHeight="900"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    Icon="/AppRestorer;component/AppIcon.ico"
    KeyUp="Window_KeyUp"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="hostBorder"
        MinWidth="500"
        MinHeight="300"
        Margin="10"
        Padding="10"
        Background="{StaticResource MeteorBackgroundBrush}"
        BorderBrush="{StaticResource DefaultedBorderBrush}"
        BorderThickness="2"
        CornerRadius="5"
        MouseDown="Control_MouseDown">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <ctrl:Spinner
            MinWidth="1074"
            MinHeight="874"
            Margin="-2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BounceCollisions="False"
            BounceLowOpacity="True"
            BounceSpeed="50"
            DotBrush="{StaticResource SnowBrushRadial}"
            DotCount="80"
            DotSize="10"
            LineBaseSpeed="150"
            LineLowOpacity="True"
            MeteorReduceLoad="True"
            MeteorShootChance="0.3"
            MeteorSpeed="10"
            MeteorSpread360="False"
            MeteorSpreadAngle="40"
            MeteorTrailColor="LightGray"
            MeteorTrailFactor="1.25"
            MeteorTrailLength="14"
            PulseAlternateOpacity="False"
            PulseCount="4"
            PulseLowOpacity="True"
            PulseRadiusFactor="2"
            PulseSpeed="1"
            RenderMode="AnimatePositions"
            RenderShape="Meteor2"
            RingsAlternateOpacity="True"
            RingsAngleSpeed="1"
            RingsCount="4"
            RingsOutward="True"
            SnowBaseSpeed="50"
            SnowLowOpacity="True"
            SpiralArmCount="3"
            SpiralClockwise="False"
            SpiralDotSpacing="5"
            SpiralFadeOut="True"
            SpiralLowOpacity="False"
            SpiralRotationAngle="0.11"
            SpiralTwistDensity="0.11"
            SquareClockwise="True"
            SquareSize="0"
            SquareStep="2"
            StripeBaseSpeed="40"
            StripeLowOpacity="True"
            TwinkleSpeed="6"
            WaveAmplitude="12"
            WaveDuration="1.1"
            WindAmplitude="1"
            WindFrequency="0.5" />
    </Border>
</Window>
