<Window
    x:Class="AppRestorer.TestingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:AppRestorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AppRestorer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Testing"
    MinWidth="600"
    MinHeight="600"
    MaxWidth="600"
    MaxHeight="600"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="Aptos"
    Icon="/AppRestorer;component/AppIcon.ico"
    KeyUp="Window_KeyUp"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        x:Name="hostBorder"
        Margin="5"
        Padding="5"
        Background="{StaticResource MeteorBackgroundBrush}"
        BorderBrush="{StaticResource DefaultedBorderBrush}"
        BorderThickness="2"
        CornerRadius="4"
        MouseDown="Control_MouseDown">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="6"
                Direction="310"
                Opacity="0.5"
                ShadowDepth="6"
                Color="{StaticResource BackgroundDark}" />
        </Border.Effect>

        <ctrl:Spinner
            Width="580"
            Height="580"
            Margin="-5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BounceCollisions="False"
            BounceLowOpacity="True"
            BounceSpeed="50"
            DotBrush="{StaticResource SnowBrushRadial}"
            DotCount="190"
            DotSize="11"
            ExplosionBaseSpeed="2"
            ExplosionFinishedPause="60"
            FallingAcceleration="True"
            FallingBaseSpeed="9"
            FallingFinishedPause="90"
            FountainBaseLife="40"
            FountainBaseSpeed="11"
            FountainColorTransition="True"
            FountainColorTransitionEaseOut="True"
            FountainEndColor="Crimson"
            FountainFadeRate="0.4"
            FountainFromBottom="True"
            FountainGravity="19"
            FountainMidColor="Orange"
            FountainSpreadDegrees="26"
            FountainStartColor="White"
            LineBaseSpeed="150"
            LineLowOpacity="True"
            MeteorReduceLoad="True"
            MeteorShootChance="0.4"
            MeteorSpeed="9"
            MeteorSpread360="False"
            MeteorSpreadAngle="50"
            MeteorTrailColor="LightGray"
            MeteorTrailFactor="1.7"
            MeteorTrailLength="8"
            PulseAlternateOpacity="False"
            PulseCount="4"
            PulseLowOpacity="True"
            PulseRadiusFactor="2"
            PulseSpeed="1"
            RenderMode="AnimatePositions"
            RenderShape="Fountain"
            RingsAlternateOpacity="True"
            RingsAngleSpeed="1"
            RingsCount="4"
            RingsOutward="True"
            SnowBaseSpeed="50"
            SnowLowOpacity="True"
            SpiralArmCount="3"
            SpiralClockwise="False"
            SpiralDotSpacing="5"
            SpiralFadeOut="True"
            SpiralLowOpacity="False"
            SpiralRotationAngle="0.11"
            SpiralTwistDensity="0.11"
            SquareClockwise="True"
            SquareSize="0"
            SquareStep="2"
            StripeBaseSpeed="40"
            StripeLowOpacity="True"
            TwinkleSpeed="6"
            WaveAmplitude="12"
            WaveDuration="1.1"
            WindAmplitude="1"
            WindFrequency="0.5" />
    </Border>
</Window>
